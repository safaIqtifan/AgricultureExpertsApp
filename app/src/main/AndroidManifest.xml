<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.agricultureexpertsapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".RootApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AgricultureExpertsApp">
        <activity android:name=".MessageActivity"></activity>
        <activity android:name=".UserActivity" />
        <activity android:name=".NotificationDisplay" />
        <activity android:name=".AddPostActivity" />
        <activity android:name=".MoreDetails" />
        <activity android:name=".ProfileActivity" />
        <activity
            android:name=".HomePageActivity"
            android:configChanges="orientation|navigation|screenSize"
            android:label="@string/title_activity_home_page" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".SignupActivity" />
        <activity android:name=".OnboardingActivity" />
        <activity android:name=".ChatsActivity" />

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>