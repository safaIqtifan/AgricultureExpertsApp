<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="@drawable/grad">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Field Crops"
            android:layout_marginTop="10dp"
            android:textColor="@color/light_black"
            android:textSize="24sp" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="20dp"
            android:layout_marginBottom="30dp"
            android:background="@color/gry" />

        <EditText
            android:id="@+id/product_type_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/box1_white2"
            android:hint="Product Type Name"
            android:inputType="textPersonName"
            android:paddingStart="20dp"
            android:textSize="14sp"
            android:textColorHint="@color/gry" />

        <EditText
            android:id="@+id/planted_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/box1_white2"
            android:hint="Planted Area"
            android:inputType="numberDecimal"
            android:paddingStart="20dp"
            android:textSize="14sp"
            android:textColorHint="@color/gry" />

        <TextView
            android:id="@+id/planted_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/box1_white2"
            android:text="Planted Date"
            android:textSize="14sp"
            android:paddingTop="8dp"
            android:inputType="date"
            android:paddingStart="20dp" />

        <TextView
            android:id="@+id/growth_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/box1_white2"
            android:text="Growth Time"
            android:inputType="date"
            android:paddingTop="8dp"
            android:textSize="14sp"
            android:paddingStart="20dp"/>

        <TextView
            android:id="@+id/crop_expiration_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/box1_white2"
            android:text="Crop Expiration Date"
            android:inputType="date"
            android:paddingTop="8dp"
            android:paddingStart="20dp"
            android:textSize="14sp"
            android:textColorHint="@color/gry" />

        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/item_pop_btn"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>