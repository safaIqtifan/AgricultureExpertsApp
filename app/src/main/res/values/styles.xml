<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AgricultureExpertsApp" parent="Theme.MaterialComponents.Light.DarkActionBar">

        <!-- Primary brand color. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">#11293F</item>
        <!-- Status bar color. -->
<!--        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>-->
        <!-- Customize your theme here. -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

    </style>

    <style name="TextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

        <item name="boxBackgroundMode">filled</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="hintTextColor">@color/colorPrimaryDark</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/round_corner_thin</item>
        <item name="boxCornerRadiusBottomStart">@dimen/round_corner_thin</item>
        <item name="boxCornerRadiusTopEnd">@dimen/round_corner_thin</item>
        <item name="boxCornerRadiusTopStart">@dimen/round_corner_thin</item>
        <item name="boxStrokeColor">@color/white</item>
        <item name="paddingTopNoTitle">5dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="hintTextAppearance">@style/hintTextColor</item>

    </style>

    <style name="hintTextColor" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="Theme.AgricultureExpertsApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AgricultureExpertsApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AgricultureExpertsApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>